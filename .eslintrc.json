{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["warn", { "code": 100 }],
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  }
}

